<Page x:Class="XboxGameClipLibrary.Views.CapturesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Captures"
      d:DesignHeight="400"
      d:DesignWidth="700"
      mc:Ignorable="d"
      Style="{DynamicResource MetroPage}">
    <StackPanel Orientation="Vertical" Margin="15">
        <TextBlock FontSize="30">Captures</TextBlock>
        <Separator  Height="12"></Separator>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <StackPanel Orientation="Vertical"
                        Margin="0 0 10 0">
                <Label Content="Filter" />
                <ComboBox>
                    <ComboBoxItem IsSelected="True">By date</ComboBoxItem>
                    <ComboBoxItem>By game</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Capture Type" />
                <ComboBox>
                    <ComboBoxItem IsSelected="True">Screenshots</ComboBoxItem>
                    <ComboBoxItem>Game clips</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- List of capture items -->
            <DataGrid Name="gameClipListView"
                      Margin="10,20,10,0"
                      AutoGenerateColumns="False"
                      Style="{StaticResource AzureDataGrid}">
                <DataGrid.Columns>
                    <!--<DataGridTemplateColumn Header="Thumbnail"
                                            Width="SizeToCells"
                                            IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Thumbnail}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
                    <DataGridTextColumn Header="Game Clip ID"
                                        Binding="{Binding GameClipId}"
                                        SortMemberPath="Game Clip ID"
                                        IsReadOnly="True" />
                    <DataGridTextColumn Header="Game"
                                        Binding="{Binding TitleName}"
                                        IsReadOnly="True" />
                    <DataGridTextColumn Header="Duration (In Seconds)"
                                        Binding="{Binding DurationInSeconds}"
                                        IsReadOnly="True" />
                    <DataGridTextColumn Header="Date Published"
                                        Binding="{Binding DatePublished}"
                                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Capture feed and capture details -->
            <!--<MediaElement Grid.Column="1" Name="videoControl" Width="426" Height="240" Source=""></MediaElement>-->
        </Grid>
    </StackPanel>

</Page>