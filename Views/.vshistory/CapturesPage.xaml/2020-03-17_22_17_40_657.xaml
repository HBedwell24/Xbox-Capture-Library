<Page x:Class="XboxGameClipLibrary.Views.Captures"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="Captures"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <TextBlock>Captures</TextBlock>
        <Separator  Height="12"></Separator>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical"
                        Margin="0 0 10 0">
                <Label Content="Filter" />
                <ComboBox>
                    <ComboBoxItem IsSelected="True">By date</ComboBoxItem>
                    <ComboBoxItem>By game</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Capture Type" />
                <ComboBox>
                    <ComboBoxItem IsSelected="True">Screenshots</ComboBoxItem>
                    <ComboBoxItem>Game clips</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <Grid>
            <!-- List of capture items -->
            <ListView>

            </ListView>

            <!-- Capture feed and capture details -->
        </Grid>
    </StackPanel>

</Page>