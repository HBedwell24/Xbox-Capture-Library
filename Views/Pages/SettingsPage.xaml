<Page x:Class="XboxGameClipLibrary.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:implementations="clr-namespace:XboxGameClipLibrary.Implementations"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:viewModels="clr-namespace:XboxGameClipLibrary.View_Models"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource MetroPage}">
    <Page.DataContext>
        <viewModels:CredentialViewModel />
    </Page.DataContext>
    <Page.Resources>
        <ControlTemplate x:Key="errorTemplate">
            <StackPanel Orientation="Vertical"
                        DockPanel.Dock="Top">
                <Border BorderBrush="OrangeRed"
                        BorderThickness="2">
                    <Grid>
                        <AdornedElementPlaceholder x:Name="ErrorAdorner" />
                        <TextBlock Foreground="OrangeRed"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right" />
                    </Grid>
                </Border>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Top"
                            HorizontalAlignment="Center"
                            Margin="0 2 0 0">
                    <Grid Width="12"
                          Height="12">
                        <Ellipse Width="12"
                                 Height="12"
                                 Fill="Red"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
                        <TextBlock Foreground="White"
                                   FontWeight="Heavy"
                                   FontSize="8"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   ToolTip="{Binding ElementName=ErrorAdorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"
                                   Text="X" />
                    </Grid>
                    <TextBlock Foreground="Red"
                               Margin="5,0,0,0"
                               Width="Auto"
                               Text="{Binding ElementName=ErrorAdorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}" />
                </StackPanel>
            </StackPanel>
        </ControlTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Grid.Row="0"
                       FontSize="28"
                       FontWeight="Light"
                       Margin="15 15 0 15"
                       Text="Settings" />
            <Separator Height="1"
                       Margin="0" />
        </StackPanel>
        <Grid Grid.Row="1"
              Margin="15">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left">
                <TextBlock FontSize="20"
                           FontWeight="Light"
                           Margin="0 0 0 10"
                           Text="Authorization" />
                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20"
                            x:Name="authorizationSummary">
                    <Label Style="{StaticResource MetroLabel}"
                           FontFamily="Segoe UI Semilight"
                           FontSize="14"
                           Margin="0 0 5 0"
                           Content="Xbox API Key:" />
                    <Label x:Name="currentKey"
                           Width="310"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="0 0 10 0" />
                    <Button Style="{StaticResource MahApps.Metro.Styles.MetroButton}"
                            Width="50"
                            FontSize="9"
                            Click="Edit_Click"
                            FontFamily="Segoe UI"
                            Content="Edit" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0 0 0 20"
                            x:Name="authorizationDetail"
                            Visibility="Collapsed">
                    <Label Style="{StaticResource MetroLabel}"
                           FontFamily="Segoe UI Semilight"
                           FontSize="14"
                           Margin="0 0 5 0"
                           Content="Xbox API Key:" />
                    <TextBox Style="{StaticResource MetroTextBox}"
                             Width="310"
                             Validation.ErrorTemplate="{StaticResource errorTemplate}"
                             Margin="0 0 10 0"
                             VerticalAlignment="Center"
                             x:Name="apiKey">
                        <TextBox.Text>
                            <Binding Path="Credential"
                                     Mode="TwoWay"
                                     UpdateSourceTrigger="PropertyChanged"
                                     ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <implementations:CredentialValidator MinimumCharacters="40" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Button Style="{StaticResource MahApps.Metro.Styles.MetroButton}"
                            Width="50"
                            FontSize="9"
                            Click="Cancel_Click"
                            FontFamily="Segoe UI"
                            Margin="0 0 10 0"
                            Content="Cancel" />
                    <Button Style="{StaticResource MahApps.Metro.Styles.MetroButton}"
                            Width="50"
                            FontSize="9"
                            Click="Save_Click"
                            FontFamily="Segoe UI"
                            Content="Save" />
                </StackPanel>
                <TextBlock FontSize="20"
                           FontWeight="Light"
                           Margin="0 0 0 10"
                           Text="Dark Theme" />
                <controls:ToggleSwitch x:Name="appThemeToggle"
                                       Style="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"
                                       Click="ToggleSwitch_Toggled"
                                       FontFamily="Segoe UI Semilight"
                                       ContentPadding="10 0 0 0"
                                       HorizontalAlignment="Left"
                                       OnLabel="On"
                                       OffLabel="Off" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
