<Window x:Class="XboxCaptureLibrary.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Height="500" 
        Width="450"
        Icon="pack://application:,,,/XboxCaptureLibrary;component/Resources/Images/logo.ico">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/XboxCaptureLibrary;component/Resources/Images/splash-background.jpg" Stretch="UniformToFill" />
    </Window.Background>
    <StackPanel VerticalAlignment="Center">
        <Image Height="100"
               Width="100"
               Source="pack://application:,,,/XboxCaptureLibrary;component/Resources/Images/logo.png"/>
        <TextBlock FontSize="38"
                   FontWeight="Light"
                   TextAlignment="Center"
                   Foreground="White">
            Xbox Capture Library
        </TextBlock>
        <TextBlock FontSize="18"
                   TextAlignment="Center"
                   FontWeight="Light"
                   Foreground="White">
            For browsing your greatest feats and more on the go.
        </TextBlock>
    </StackPanel>
</Window>
